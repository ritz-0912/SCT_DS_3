# 1. Libraries Import
import pandas as pd
from sklearn.model_selection import train_test_split
from sklearn.tree import DecisionTreeClassifier
from sklearn.metrics import accuracy_score

# 2. Data Loading (Assuming 'bank.csv' is unzipped and in the same folder)
file_name = 'bank.csv' 
df = pd.read_csv(file_name, sep=',')
print("Data Loaded. Columns and types:")
print(df.info())

# Check karne ke liye ki column names kya hain
print(df.columns)

# 1. Target Variable 'y' ko Numbers me badalna ('yes'=1, 'no'=0)
df['deposit'] = df['deposit'].map({'yes': 1, 'no': 0}) # Yahan 'df' use ho raha hai

# 2. Saare Text columns ko Numbers me badalna (One-Hot Encoding)
df_encoded = pd.get_dummies(df, drop_first=True) # Yahan bhi 'df' use ho raha hai

# 3. Features (X) aur Target (y) ko alag karna
X = df_encoded.drop('deposit', axis=1) 
y = df_encoded['deposit']           

print("Data Preprocessing Complete. Total Features:", X.shape[1])

# Zaroori imports dobara yahan kiye gaye hain
from sklearn.model_selection import train_test_split
from sklearn.tree import DecisionTreeClassifier
from sklearn.metrics import accuracy_score

# 1. Data ko Training aur Testing sets mein baantna (X aur y Cell 2 se aayenge)
X_train, X_test, y_train, y_test = train_test_split(X, y, test_size=0.3, random_state=42)

# 2. Decision Tree Model ko train karna
dtc = DecisionTreeClassifier(random_state=42)
dtc.fit(X_train, y_train)

# 3. Test data par prediction karna
y_pred = dtc.predict(X_test)

# 4. Model ki Accuracy check karna (Yeh hi aapka final Task 03 result hai)
accuracy = accuracy_score(y_test, y_pred)

print(f"\nâœ… Decision Tree Model Training Successful.")
print(f"Final Model Accuracy: {accuracy*100:.2f}%")
